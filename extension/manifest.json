{
  "manifest_version": 3,
  "name": "scrive",
  "version": "2.0",
  "description": "Helps you write better messages",
  "icons": {
    "16": "assets/logo.png",
    "48": "assets/logo.png",
    "128": "assets/logo.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "assets/logo.png",
      "48": "assets/logo.png",
      "128": "assets/logo.png"
    }
  },

  "permissions": ["storage", "tabs"],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://scrive.pro/*",
    "https://api.scrive.pro/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/logo.png",
        "assets/loading.svg",
        "assets/GoogleIcon.png"
      ],

      "matches": ["https://www.linkedin.com/*"]
    }
  ]
}
